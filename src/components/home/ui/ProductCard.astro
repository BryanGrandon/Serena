---
import ButtonLink from '../../core/ui/ButtonLink.tsx'

type product_card = {
  title: string
  link: string
  img: string
}
const { title, link, img } = Astro.props as product_card
---

<a href={link} class='flex flex-col items-center p-4 gap-4 bg-white/30 rounded-xl relative shadow-lg shadow-black/20 hover:scale-102 active:scale-98 product_card'>
  <h2 class='font-basicaline text-2xl font-bold text-center text-black'>{title}</h2>
  <article class='w-40 lg:w-auto xl:h-50 overflow-hidden rounded-lg'>
    <img src={img} alt='' class='object-contain object-center w-full h-full rounded-lg' />
  </article>
  <ButtonLink link={link} text='Ver Listado de fragancias' client:load />
</a>

<style>
  .product_card img {
    transition: transform 0.3s ease;
  }
  .product_card:hover img {
    transform: scale(1.15);
  }
</style>
