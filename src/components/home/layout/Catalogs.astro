---
import home from '../../../data/home.json'

type catalog_item = {
  title: string
  description: string
  link: { href: string; text: string }
  img: string
  background?: boolean
}
type catalog_items = {
  title: string
  background?: boolean
  articles?: any[]
}
const { catalogs } = home
---

<main>
  {
    catalogs.map((el) => (
      <article class=''>
        <section class='w-full flex flex-col items-center p-8 test'>
          <h2 class='text-4xl font-bold font-basicaline text-black text-center w-full'>{el.title}</h2>
          <span class='block h-0.5 w-30 bg-secondary rounded-2xl' />
        </section>

        {el.article == true ? (
          <article class='max-w-[1300px] mx-auto p-4'>
            <article class='grid grid-cols-[repeat(auto-fill,_minmax(18rem,_1fr))] gap-8'>
              {el.items?.map((item) => (
                <a href={item.link.href} class='flex flex-col p-4 gap-4 bg-white/30 rounded-xl relative shadow-lg shadow-black/20 hover:scale-102 active:scale-98 item_card'>
                  <h2 class='font-basicaline text-2xl font-bold text-center text-black'>{item.title}</h2>
                  <article class='h-60 overflow-hidden rounded-lg'>
                    <img src={item?.img} alt='' class='object-cover' />
                  </article>
                  <button class='bg-primary text-black py-1 px-4 rounded-lg hover:scale-102 active:scale-98'>Ver Listado de fragancias</button>
                </a>
              ))}
            </article>
          </article>
        ) : (
          <article class='grid grid-cols-1 lg:grid-cols-2 gap-4 p-4'>
            {el.items.map((item) => (
              <section class='flex flex-col md:flex-row items-center bg-white/30 rounded-xl p-4 shadow-black/30 shadow-lg gap-4'>
                <section class='flex flex-col gap-4'>
                  <div>
                    <h2 class='text-3xl font-bold font-basicaline text-black'>{item.title}</h2>
                    <span class='block h-0.5 w-20 bg-secondary rounded-2xl' />
                  </div>
                  <p class='prose'>{item.description}</p>
                  <a href={item.link.href} class='bg-blue-600 text-white py-1 px-4 rounded-lg max-w-fit hover:scale-105 active:scale-95'>
                    {item.link.text}
                  </a>
                </section>
                <img src={item.img} alt={`${item.title}-img`} class='object-cover h-50 min-w-80 rounded-lg' />
              </section>
            ))}
          </article>
        )}
      </article>
    ))
  }
</main>

<style>
  .item_card img {
    transition: transform 0.3s ease;
  }
  .item_card:hover img {
    transform: scale(1.15);
  }
</style>
