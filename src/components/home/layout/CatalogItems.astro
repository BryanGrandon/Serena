---
type catalog_items = {
  title: string
  background?: boolean
  articles?: any[]
}
const { title, background, articles } = Astro.props as catalog_items
---

<article class={`p-4  relative ${background ? '' : ''}`}>
  <article class={`flex items-center gap-8 p-4 flex-col justify-between max-w-[1300px] mx-auto ${background ? 'md:flex-row' : 'md:flex-row-reverse '}  `}>
    <section class='w-full flex flex-col items-center'>
      <h2 class='text-4xl font-bold font-basicaline text-black text-center w-full'>{title}</h2>
      <span class='block h-0.5 w-30 bg-secondary rounded-2xl'></span>
    </section>
  </article>

  <article class='max-w-[1300px] mx-auto p-4'>
    <article class='grid grid-cols-[repeat(auto-fill,_minmax(18rem,_1fr))] gap-8'>
      {
        articles?.map((item) => (
          <a href={item.link.href} class='flex flex-col p-4 gap-4 bg-white/30 rounded-xl relative shadow-lg shadow-black/20 hover:scale-102 active:scale-98 item_card'>
            <h2 class='font-basicaline text-2xl font-bold text-center text-black'>{item.title}</h2>
            <article class='h-60 overflow-hidden rounded-lg'>
              <img src={item.img} alt='' class='object-cover' />
            </article>
            <button class='bg-primary text-black py-1 px-4 rounded-lg hover:scale-102 active:scale-98'>Ver Listado de fragancias</button>
          </a>
        ))
      }
    </article>
  </article>
</article>

<style>
  .item_card img {
    transition: transform 0.3s ease;
  }
  .item_card:hover img {
    transform: scale(1.15);
  }
</style>
