---
type Props = {
  title: string
  description: string
  link: { href: string; text: string }
  imgSrc: string
  background?: boolean
  articles?: any[]
}
const { title, description, link, imgSrc, background, articles } = Astro.props
---

<article class={`p-8  ${background ? 'bg-[#f4d890]' : ''}`}>
  <article class={`flex items-center gap-8 p-8 flex-col justify-between max-w-[1300px] mx-auto ${background ? 'md:flex-row' : 'md:flex-row-reverse '}  `}>
    <section class='flex flex-col gap-4'>
      <div>
        <h2 class='text-3xl font-bold font-basicaline text-black'>{title}</h2>
        <span class='block h-0.5 w-20 bg-secondary rounded-2xl'></span>
      </div>
      <p class='prose'>{description}</p>
      <a href={link.href} class='border border-primary bg-blue-600 text-white py-1 px-4 rounded-lg max-w-fit hover:scale-105 active:scale-95'>{link.text}</a>
    </section>
    <section class=''>
      <img src={imgSrc} alt=`${title}-img` class='object-cover h-50 min-w-80 rounded-lg' />
    </section>
  </article>
  {
    articles ? (
      <article class='max-w-[1300px] mx-auto p-4'>
        <article class='grid grid-cols-[repeat(auto-fill,_minmax(18rem,_1fr))] gap-8'>
          {articles.map((article) => (
            <article class='flex flex-col p-4 gap-4 bg-white/30 rounded-xl'>
              <h2 class='font-basicaline text-2xl font-bold text-center text-black'>{article.title}</h2>
              <img src={article.img} alt='' class='object-cover h-60 rounded-lg' />
              <a href={article.link.href} class='bg-primary text-black py-1 px-4 rounded-lg hover:scale-102 active:scale-98'>
                Ver Listado de fragancias
              </a>
            </article>
          ))}
        </article>
      </article>
    ) : null
  }
</article>
